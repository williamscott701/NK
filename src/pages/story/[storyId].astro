---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.tsx';
import storiesData from '../../data/bible-stories.json';

export async function getStaticPaths() {
  return storiesData.stories.map((story) => ({
    params: { storyId: story.id },
    props: { story }
  }));
}

const { story } = Astro.props;
---

<Layout title={`${story.title} - Bible Story`}>
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-green-50 via-emerald-50 to-teal-100 py-16">
      <div class="absolute top-10 left-10 w-48 h-48 bg-green-500/5 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-green-500/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-6">
        <!-- Breadcrumb -->
        <Breadcrumb 
          client:load 
          items={[
            { label: 'Home', href: '/' },
            { label: 'Stories', href: '/stories' },
            { label: story.title }
          ]} 
        />

        <!-- Story Header -->
        <div class="text-center mb-12">
          <div class="w-20 h-20 bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
            </svg>
          </div>
          <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-emerald-700 mb-4">
            {story.title}
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
            {story.summary}
          </p>
        </div>
      </div>
    </section>

    <!-- Story Content -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-6">
        <!-- Story Details -->
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <!-- Story Information -->
          <div class="bg-gradient-to-r from-gray-50 to-white rounded-2xl p-8 shadow-lg border border-gray-100">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Story Information</h3>
            <div class="space-y-4">
              <div>
                <span class="font-semibold text-gray-700">Book:</span>
                <span class="ml-2 text-gray-600">{story.book}</span>
              </div>
              <div>
                <span class="font-semibold text-gray-700">Chapters:</span>
                <span class="ml-2 text-gray-600">{story.chapters}</span>
              </div>
              <div>
                <span class="font-semibold text-gray-700">Themes:</span>
                <div class="mt-2 flex flex-wrap gap-2">
                  {story.themes.map((theme) => (
                    <span class="px-3 py-1 bg-green-100 text-green-800 text-sm rounded-full border border-green-200">
                      {theme}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <!-- Key Verse -->
          <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-8 shadow-lg border border-green-200">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Key Verse</h3>
            <div class="text-center">
              <blockquote class="text-lg text-gray-700 leading-relaxed italic border-l-4 border-green-500 pl-6 mb-4">
                "{story.keyVerse}"
              </blockquote>
              <div class="text-sm text-green-600 font-medium">
                {story.keyVerse.split(' - ')[0]}
              </div>
            </div>
          </div>
        </div>

        <!-- Full Story Summary -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Story Summary</h2>
          <div class="bg-gradient-to-r from-gray-50 to-white rounded-2xl p-8 shadow-lg border border-gray-100">
            <p class="text-lg text-gray-700 leading-relaxed">
              {story.summary}
            </p>
          </div>
        </div>

        <!-- Read Full Story -->
        <div class="text-center mb-12">
          <h3 class="text-2xl font-bold text-gray-800 mb-6">Read the Full Story</h3>
          <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
            This story is found in {story.book}, chapters {story.chapters}. Click below to read the complete biblical text with context and commentary.
          </p>
          <a 
            href={`/book/${story.book.toLowerCase().replace(/\s+/g, '-')}/chapter/${story.chapters.split('-')[0]}`}
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold rounded-xl hover:from-green-600 hover:to-emerald-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105"
          >
            Read Full Text
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>

        <!-- Explore More Stories -->
        <div class="text-center">
          <h3 class="text-2xl font-bold text-gray-800 mb-6">Explore More Stories</h3>
          <a 
            href="/stories" 
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold rounded-xl hover:from-green-600 hover:to-emerald-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105"
          >
            Browse All Stories
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
