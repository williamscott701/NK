      <div class="absolute bottom-10 right-10 w-64 h-64 bg-indigo-500/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-6">
        <!-- Breadcrumb -->
        <Breadcrumb 
