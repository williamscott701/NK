                    else if (key.includes('abundance') || key.includes('fruit')) icon = 'ğŸ‡';
                    else if (key.includes('judgment') || key.includes('reward')) icon = 'âš–ï¸';
                    else if (key.includes('illumination') || key.includes('light')) icon = 'ğŸ’¡';
                    else if (key.includes('guidance') || key.includes('direction')) icon = 'ğŸ§­';
                    else if (key.includes('exposure') || key.includes('truth')) icon = 'ğŸ”';
                    else if (key.includes('witness') || key.includes('testimony')) icon = 'ğŸ“¢';
                    
