---
import Layout from '../layouts/Layout.astro';
import PageSearch from '../components/PageSearch.tsx';
import Breadcrumb from '../components/Breadcrumb.tsx';
import Footer from '../components/Footer.astro';
import storiesData from '../data/bible-stories.json';
import { PATHS } from '../utils/paths';

const stories = storiesData.stories;
---

<Layout title="Bible Stories - Inspiring Narratives">
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-green-50 via-emerald-50 to-teal-100 py-16">
      <div class="absolute top-10 left-10 w-48 h-48 bg-green-500/5 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-green-500/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-6xl mx-auto px-6">
        <!-- Breadcrumb -->
        <Breadcrumb 
          client:load 
          items={[
            { label: 'Home', href: PATHS.home() },
            { label: 'Stories' }
          ]} 
        />

        <!-- Page Header -->
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-emerald-700 mb-4">
            Bible Stories
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Discover {stories.length} inspiring biblical stories from Genesis to Revelation with context and meaning.
          </p>
        </div>

        <!-- Search Section -->
        <PageSearch 
          client:load 
          placeholder="Search for stories like creation, noah, david..."
          storiesData={stories}
          searchMode="stories"
        />
      </div>
    </section>

    <!-- Stories Grid Section -->
    <section class="py-16 bg-gradient-to-br from-white to-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-8">
          {stories.map((story) => (
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 overflow-hidden flex flex-col">
              <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold text-gray-800">{story.title}</h3>
                      <p class="text-sm text-gray-500">
                        {story.references.map(ref => `${ref.book} ${ref.chapters}`).join(', ')}
                      </p>
                    </div>
                  </div>
                </div>
                
                <p class="text-gray-600 mb-6 leading-relaxed">
                  {story.summary}
                </p>
                
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-gray-700 mb-3">Key Themes:</h4>
                  <div class="flex flex-wrap gap-2">
                    {story.themes.map((theme) => (
                      <span class="text-xs text-green-700 bg-green-100 px-3 py-1 rounded-full">
                        {theme}
                      </span>
                    ))}
                  </div>
                </div>
                
                <div class="bg-green-50 rounded-lg p-4 mb-6">
                  <h4 class="text-sm font-semibold text-green-800 mb-2">Key Verse:</h4>
                  <p class="text-sm text-green-700 italic">{story.keyVerse}</p>
                </div>
                
                <div class="mt-auto">
                  <a 
                    href={PATHS.story(story.id)}
                    class="block w-full bg-gradient-to-r from-green-500 to-emerald-600 text-white py-3 px-4 rounded-lg hover:from-green-500/90 hover:to-emerald-600/90 transition-all duration-200 font-semibold text-center"
                  >
                    Read Full Story
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
