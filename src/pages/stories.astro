---
import Layout from '../layouts/Layout.astro';
import PageSearch from '../components/PageSearch.tsx';
import storiesData from '../data/bible-stories.json';

const stories = storiesData.stories;
const storySuggestions = stories.slice(0, 6).map(story => story.title);
---

<Layout title="Bible Stories - Inspiring Narratives">
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 py-16">
      <div class="absolute top-10 left-10 w-48 h-48 bg-green-500/5 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-emerald-600/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-6xl mx-auto px-6">
        <!-- Back to Home -->
        <div class="mb-8">
          <a href="/" class="inline-flex items-center text-bible-blue hover:text-blue-700 transition-colors duration-200">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Home
          </a>
        </div>

        <!-- Page Header -->
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-emerald-600 mb-4">
            Bible Stories
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Journey through the most inspiring and meaningful stories from Scripture. Each narrative teaches valuable lessons about faith, courage, and God's love.
          </p>
        </div>

        <!-- Search Section -->
        <PageSearch 
          client:load 
          placeholder="Search for stories, characters, or themes..."
          suggestions={storySuggestions}
        />
      </div>
    </section>

    <!-- Stories Grid Section -->
    <section class="py-16 bg-gradient-to-br from-white to-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-8">
          {stories.map((story) => (
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 overflow-hidden">
              <div class="p-6">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold text-gray-800">{story.title}</h3>
                      <p class="text-sm text-gray-500">{story.book} {story.chapters}</p>
                    </div>
                  </div>
                </div>
                
                <p class="text-gray-600 mb-6 leading-relaxed">
                  {story.summary}
                </p>
                
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-gray-700 mb-3">Key Themes:</h4>
                  <div class="flex flex-wrap gap-2">
                    {story.themes.map((theme) => (
                      <span class="text-xs text-green-700 bg-green-100 px-3 py-1 rounded-full">
                        {theme}
                      </span>
                    ))}
                  </div>
                </div>
                
                <div class="bg-green-50 rounded-lg p-4 mb-6">
                  <h4 class="text-sm font-semibold text-green-800 mb-2">Key Verse:</h4>
                  <p class="text-sm text-green-700 italic">{story.keyVerse}</p>
                </div>
                
                <button class="w-full bg-gradient-to-r from-green-500 to-emerald-600 text-white py-3 px-4 rounded-lg hover:from-green-500/90 hover:to-emerald-600/90 transition-all duration-200 font-semibold">
                  Read Full Story
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Story Categories -->
    <section class="py-16 bg-gradient-to-br from-green-50 to-emerald-50">
      <div class="max-w-6xl mx-auto px-6">
        <h3 class="text-3xl font-bold text-center text-gray-800 mb-12">Story Categories</h3>
        
        <div class="grid md:grid-cols-3 gap-6">
          <!-- Old Testament Stories -->
          <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-white/20">
            <div class="w-12 h-12 bg-gradient-to-r from-bible-blue to-blue-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h4 class="text-xl font-bold text-gray-800 mb-3">Old Testament</h4>
            <p class="text-gray-600 mb-4">Stories of creation, patriarchs, exodus, and the history of Israel.</p>
            <div class="text-sm text-gray-500">
              <strong>{stories.filter(story => ['Genesis', 'Exodus', '1 Samuel'].includes(story.book)).length}</strong> stories available
            </div>
          </div>
          
          <!-- New Testament Stories -->
          <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-white/20">
            <div class="w-12 h-12 bg-gradient-to-r from-bible-gold to-yellow-500 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h4 class="text-xl font-bold text-gray-800 mb-3">Jesus' Life</h4>
            <p class="text-gray-600 mb-4">Stories of Jesus' birth, ministry, death, and resurrection.</p>
            <div class="text-sm text-gray-500">
              <strong>{stories.filter(story => ['Luke', 'Matthew'].includes(story.book)).length}</strong> stories available
            </div>
          </div>
          
          <!-- Parables -->
          <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-white/20">
            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h4 class="text-xl font-bold text-gray-800 mb-3">Parables</h4>
            <p class="text-gray-600 mb-4">Jesus' teaching stories with deep spiritual meanings.</p>
            <div class="text-sm text-gray-500">
              <strong>Coming Soon</strong>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
