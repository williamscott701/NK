---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar.tsx';
import booksData from '../data/bible-books.json';
import conceptsData from '../data/bible-concepts.json';
import storiesData from '../data/bible-stories.json';
---

<Layout title="BibleBing - Discover Divine Wisdom">
  <main class="min-h-screen bg-gradient-to-br from-purple-100 via-indigo-100 to-blue-100">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 bg-gradient-to-br from-purple-100 via-indigo-100 to-blue-100"></div>
      <div class="absolute top-20 left-20 w-72 h-72 bg-bible-gold/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-bible-blue/20 rounded-full blur-3xl"></div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-6 py-12">
        <!-- Header -->
        <header class="relative z-20 mb-16">
          <!-- Main Title Section -->
          <div class="text-center mb-8 relative z-20">
            <div class="inline-block relative px-8 py-4">
              <h1 class="text-5xl md:text-6xl font-black leading-none tracking-tighter">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-bible-blue via-indigo-600 to-purple-700">Bible</span>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-bible-gold via-amber-500 to-orange-500 ml-4">Bing</span>
              </h1>
              <div class="absolute -top-2 -right-2 w-8 h-8 bg-gradient-to-r from-bible-gold to-amber-500 rounded-full animate-pulse"></div>
              <div class="absolute -bottom-2 -left-2 w-6 h-6 bg-gradient-to-r from-bible-blue to-indigo-600 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
            </div>
          </div>



          <!-- Tagline Section -->
          <div class="text-center relative z-20">
            <div class="inline-flex items-center bg-white/80 backdrop-blur-2xl rounded-full px-8 py-4 border border-white/60 shadow-2xl shadow-gray-200/30">
              <span class="text-sm font-bold text-gray-800 tracking-wide">
                Discover Divine Wisdom
              </span>
            </div>
          </div>

          <!-- Decorative Elements -->
          <div class="absolute top-0 left-1/4 w-32 h-32 bg-gradient-to-r from-bible-gold/20 to-amber-200/20 rounded-full blur-3xl animate-pulse"></div>
          <div class="absolute bottom-0 right-1/4 w-40 h-40 bg-gradient-to-r from-bible-blue/20 to-indigo-200/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
        </header>

        <!-- Search Section -->
        <div class="mt-64 mb-80">
          <SearchBar 
            client:load 
            placeholder="Search Bible content..."
            booksData={booksData}
            conceptsData={conceptsData}
            storiesData={storiesData}
          />
        </div>

        <!-- Main Navigation Cards -->
        <div class="grid md:grid-cols-3 gap-8 mt-20">
          <!-- Books Card -->
          <a href="/books" class="group bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 block">
            <div class="w-16 h-16 bg-gradient-to-r from-bible-blue to-blue-600 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-4 text-center group-hover:text-bible-blue transition-colors duration-300">Books</h3>
            <p class="text-gray-600 text-center leading-relaxed">
              Explore all 66 books of the Bible with detailed information, chapters, and verses.
            </p>
          </a>

          <!-- Concepts Card -->
          <a href="/concepts" class="group bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 block">
            <div class="w-16 h-16 bg-gradient-to-r from-bible-gold to-yellow-500 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-4 text-center group-hover:text-bible-gold transition-colors duration-300">Concepts</h3>
            <p class="text-gray-600 text-center leading-relaxed">
              Discover key biblical concepts like love, faith, hope, and many more with relevant verses.
            </p>
          </a>

          <!-- Stories Card -->
          <a href="/stories" class="group bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 block">
            <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-4 text-center group-hover:text-green-600 transition-colors duration-300">Stories</h3>
            <p class="text-gray-600 text-center leading-relaxed">
              Read inspiring biblical stories from Genesis to Revelation with context and meaning.
            </p>
          </a>
        </div>

                 <!-- Coming Soon Features Section -->
         <div class="mt-24">
           <div class="bg-white/60 backdrop-blur-sm rounded-3xl p-12 border border-white/30 shadow-2xl">
             <div class="text-center mb-12">
               <div class="mb-4">
                 <span class="inline-block bg-gradient-to-r from-bible-gold to-amber-500 text-white text-2xl font-bold px-8 py-4 rounded-full">Coming Soon</span>
               </div>
               <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                 We're working hard to bring you even more powerful tools for your Bible study journey.
               </p>
             </div>
             
             <div class="flex flex-wrap justify-center gap-4 md:flex-nowrap md:overflow-x-auto">
               <!-- Daily Devotionals -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Daily Devotionals</h3>
               </div>

               <!-- Study Plans -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Study Plans</h3>
               </div>

               <!-- Audio Bible -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Audio Bible</h3>
               </div>

               <!-- Cross-References -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Cross-References</h3>
               </div>

               <!-- Community Features -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Community</h3>
               </div>

               <!-- Mobile App -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-teal-500 to-blue-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Mobile App</h3>
               </div>

               <!-- Interactive Quiz -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Interactive Quiz</h3>
               </div>

               <!-- Favourites -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-pink-500 to-rose-500 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Favourites</h3>
               </div>

               <!-- Merch -->
               <div class="text-center">
                 <div class="w-12 h-12 bg-gradient-to-r from-gray-600 to-gray-800 rounded-xl flex items-center justify-center mb-3 mx-auto">
                   <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                   </svg>
                 </div>
                 <h3 class="text-sm font-semibold text-gray-800">Merch</h3>
               </div>
             </div>
           </div>
         </div>

        <!-- Support Us Section -->
        <div class="mt-20">
          <div class="bg-gradient-to-r from-bible-gold to-amber-500 rounded-3xl p-12 shadow-2xl relative overflow-hidden">
            <!-- Background decoration -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
            <div class="absolute bottom-0 left-0 w-40 h-40 bg-white/10 rounded-full blur-2xl"></div>
            
            <div class="relative z-10 text-center">
              <div class="w-20 h-20 bg-white/20 rounded-2xl flex items-center justify-center mb-6 mx-auto backdrop-blur-sm">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
                Support Our Mission
              </h2>
              
              <p class="text-xl text-amber-100 mb-8 max-w-3xl mx-auto leading-relaxed">
                Help us continue building tools that make biblical wisdom accessible to everyone. 
                Your support enables us to develop new features, improve content, and reach more people.
              </p>
              
              <div class="flex justify-center">
                <button class="bg-white text-amber-600 px-8 py-4 rounded-xl font-semibold text-lg hover:bg-gray-50 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                  Donate Now
                </button>
              </div>
              
              <div class="mt-8 text-amber-100 text-sm">
                <p>Every contribution makes a difference in our mission to spread divine wisdom.</p>
              </div>
            </div>
          </div>
        </div>

        
              </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="grid md:grid-cols-4 gap-8">
          <!-- Brand Section -->
          <div class="col-span-2">
            <div class="flex items-center mb-4">
              <h3 class="text-2xl font-bold">
                <span class="text-bible-blue">Bible</span>
                <span class="text-bible-gold">Bing</span>
              </h3>
            </div>
            <p class="text-gray-300 mb-6 max-w-md">
              Discover divine wisdom with powerful tools designed to make Bible study engaging, meaningful, and accessible to everyone.
            </p>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/books" class="text-gray-300 hover:text-white transition-colors">Books</a></li>
              <li><a href="/concepts" class="text-gray-300 hover:text-white transition-colors">Concepts</a></li>
              <li><a href="/stories" class="text-gray-300 hover:text-white transition-colors">Stories</a></li>
              <li><a href="#" class="text-gray-300 hover:text-white transition-colors">About</a></li>
            </ul>
          </div>

          <!-- Support -->
          <div>
            <h4 class="text-lg font-semibold mb-4">Support</h4>
            <ul class="space-y-2">
              <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Help Center</a></li>
              <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Contact Us</a></li>
              <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Privacy Policy</a></li>
              <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Terms of Service</a></li>
            </ul>
          </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-gray-800 mt-12 pt-8 text-center">
          <p class="text-gray-400">
            © 2025 BibleBing. All rights reserved. Made with ❤️ for spreading divine wisdom.
          </p>
        </div>
      </div>
    </footer>
  </Layout>
