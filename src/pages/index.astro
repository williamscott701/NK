---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar.tsx';
import booksData from '../data/bible-books.json';
import conceptsData from '../data/bible-concepts.json';
import storiesData from '../data/bible-stories.json';
---

<Layout title="BibleBing - Discover Divine Wisdom">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100"></div>
      <div class="absolute top-20 left-20 w-72 h-72 bg-bible-gold/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-bible-blue/10 rounded-full blur-3xl"></div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-6 py-12">
        <!-- Header -->
        <header class="relative z-20 mb-16">
          <!-- Main Title Section -->
          <div class="text-center mb-8 relative z-20">
            <div class="inline-block relative">
              <h1 class="text-5xl md:text-6xl font-black leading-none tracking-tighter">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-bible-blue via-indigo-600 to-purple-700">Bible</span>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-bible-gold via-amber-500 to-orange-500 ml-4">Bing</span>
              </h1>
              <div class="absolute -top-4 -right-4 w-8 h-8 bg-gradient-to-r from-bible-gold to-amber-500 rounded-full animate-pulse"></div>
              <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-gradient-to-r from-bible-blue to-indigo-600 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
            </div>
          </div>

          <!-- Tagline Section -->
          <div class="text-center relative z-20">
            <div class="inline-flex items-center bg-white/80 backdrop-blur-2xl rounded-full px-8 py-4 border border-white/60 shadow-2xl shadow-gray-200/30">
              <span class="text-sm font-bold text-gray-800 tracking-wide">
                Discover Divine Wisdom
              </span>
            </div>
          </div>

          <!-- Decorative Elements -->
          <div class="absolute top-0 left-1/4 w-32 h-32 bg-gradient-to-r from-bible-gold/20 to-amber-200/20 rounded-full blur-3xl animate-pulse"></div>
          <div class="absolute bottom-0 right-1/4 w-40 h-40 bg-gradient-to-r from-bible-blue/20 to-indigo-200/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
        </header>

        <!-- Search Section -->
        <div class="mt-64 mb-80">
          <SearchBar 
            client:load 
            placeholder="Search for Bible books, stories, concepts, or verses..."
            booksData={booksData}
            conceptsData={conceptsData}
            storiesData={storiesData}
          />
        </div>

        <!-- Main Navigation Cards -->
        <div class="grid md:grid-cols-3 gap-8 mt-20">
          <!-- Books Card -->
          <a href="/books" class="group bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 block">
            <div class="w-16 h-16 bg-gradient-to-r from-bible-blue to-blue-600 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-4 text-center group-hover:text-bible-blue transition-colors duration-300">Books</h3>
            <p class="text-gray-600 text-center leading-relaxed">
              Explore all 66 books of the Bible with detailed information, chapters, and verses.
            </p>
          </a>

          <!-- Concepts Card -->
          <a href="/concepts" class="group bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 block">
            <div class="w-16 h-16 bg-gradient-to-r from-bible-gold to-yellow-500 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-4 text-center group-hover:text-bible-gold transition-colors duration-300">Concepts</h3>
            <p class="text-gray-600 text-center leading-relaxed">
              Discover key biblical concepts like love, faith, hope, and many more with relevant verses.
            </p>
          </a>

          <!-- Stories Card -->
          <a href="/stories" class="group bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 block">
            <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-4 text-center group-hover:text-green-600 transition-colors duration-300">Stories</h3>
            <p class="text-gray-600 text-center leading-relaxed">
              Read inspiring biblical stories from Genesis to Revelation with context and meaning.
            </p>
          </a>
        </div>

        <!-- Call to Action -->
        <div class="text-center mt-20">
          <div class="bg-gradient-to-r from-bible-blue to-indigo-600 rounded-3xl p-12 shadow-2xl">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
              Begin Your Journey Today
            </h2>
            <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
              Start exploring the depths of scripture with tools designed to make learning engaging and meaningful.
            </p>
            <button class="bg-white text-bible-blue px-8 py-4 rounded-xl font-semibold text-lg hover:bg-gray-50 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
              Get Started
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
