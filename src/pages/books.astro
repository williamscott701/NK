---
import Layout from '../layouts/Layout.astro';
import PageSearch from '../components/PageSearch.tsx';
import booksData from '../data/bible-books.json';

const books = booksData.books;
const bookSuggestions = books.slice(0, 6).map(book => book.name);
---

<Layout title="Bible Books - Explore Scripture">
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 py-16">
      <div class="absolute top-10 left-10 w-48 h-48 bg-bible-blue/5 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-bible-gold/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-6xl mx-auto px-6">
        <!-- Back to Home -->
        <div class="mb-8">
          <a href="/" class="inline-flex items-center text-bible-blue hover:text-blue-700 transition-colors duration-200">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Home
          </a>
        </div>

        <!-- Page Header -->
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-bible-blue to-indigo-600 mb-4">
            Bible Books
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Explore all 66 books of the Bible, from Genesis to Revelation. Discover their themes, authors, and key messages.
          </p>
        </div>

        <!-- Search Section -->
        <PageSearch 
          client:load 
          placeholder="Search for books, authors, or themes..."
          suggestions={bookSuggestions}
        />
      </div>
    </section>

    <!-- Books Grid Section -->
    <section class="py-16 bg-gradient-to-br from-white to-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {books.map((book) => (
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 overflow-hidden">
              <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="text-xl font-bold text-gray-800">{book.name}</h3>
                  <span class="text-sm text-bible-blue bg-bible-blue/10 px-3 py-1 rounded-full">
                    {book.chapters} chapters
                  </span>
                </div>
                
                <div class="mb-4">
                  <span class="text-sm text-gray-500 bg-gray-100 px-2 py-1 rounded">
                    {book.testament}
                  </span>
                  <span class="text-sm text-gray-500 ml-2">by {book.author}</span>
                </div>
                
                <p class="text-gray-600 mb-4 leading-relaxed">
                  {book.description}
                </p>
                
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-gray-700 mb-2">Key Themes:</h4>
                  <div class="flex flex-wrap gap-2">
                    {book.themes.map((theme) => (
                      <span class="text-xs text-bible-gold bg-bible-gold/10 px-2 py-1 rounded-full">
                        {theme}
                      </span>
                    ))}
                  </div>
                </div>
                
                <a 
                  href={`/book/${book.id}`}
                  class="block w-full bg-gradient-to-r from-bible-blue to-blue-600 text-white py-2 px-4 rounded-lg hover:from-bible-blue/90 hover:to-blue-600/90 transition-all duration-200 font-semibold text-center"
                >
                  Explore Chapters
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testament Sections -->
    <section class="py-16 bg-gradient-to-br from-bible-blue/5 to-indigo-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Old Testament -->
          <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
            <h3 class="text-2xl font-bold text-bible-blue mb-4">Old Testament</h3>
            <p class="text-gray-600 mb-6">
              The foundation of faith, containing 39 books from Genesis to Malachi, revealing God's covenant with humanity.
            </p>
            <div class="text-sm text-gray-500">
              <strong>{books.filter(book => book.testament === 'Old Testament').length}</strong> books available
            </div>
          </div>
          
          <!-- New Testament -->
          <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
            <h3 class="text-2xl font-bold text-bible-gold mb-4">New Testament</h3>
            <p class="text-gray-600 mb-6">
              The fulfillment of promises, containing 27 books from Matthew to Revelation, revealing Jesus Christ and the early church.
            </p>
            <div class="text-sm text-gray-500">
              <strong>{books.filter(book => book.testament === 'New Testament').length}</strong> books available
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
