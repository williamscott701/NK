---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.tsx';
import booksData from '../../data/bible-books.json';
import { PATHS } from '../../utils/paths';

export async function getStaticPaths() {
  return booksData.books.map((book) => ({
    params: { bookId: book.id },
    props: { book }
  }));
}

const { book } = Astro.props;
---

<Layout title={`${book.name} - Bible Book`}>
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-100 py-8 md:py-16">
      <div class="absolute top-10 left-10 w-48 h-48 bg-bible-blue/5 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-bible-gold/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-6">
        <!-- Breadcrumb -->
        <Breadcrumb 
          client:load 
          items={[
            { label: 'Home', href: PATHS.home() },
            { label: 'Books', href: PATHS.books() },
            { label: book.name }
          ]} 
        />

        <!-- Book Header -->
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-bible-blue to-indigo-600 mb-4">
            {book.name}
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-6">
            {book.description}
          </p>
          
          <!-- Book Info -->
          <div class="flex flex-wrap justify-center gap-4 mb-8">
            <span class="bg-bible-blue/10 text-bible-blue px-4 py-2 rounded-full">
              {book.testament}
            </span>
            <span class="bg-bible-gold/10 text-bible-gold px-4 py-2 rounded-full">
              {book.chapters} Chapters
            </span>
            <span class="bg-gray-100 text-gray-700 px-4 py-2 rounded-full">
              Author: {book.author}
            </span>
          </div>

          <!-- Themes -->
          <div class="flex flex-wrap justify-center gap-2">
            {book.themes.map((theme) => (
              <span class="text-sm bg-bible-gold/20 text-bible-gold px-3 py-1 rounded-full">
                {theme}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Chapters Grid Section -->
    <section class="py-16 bg-gradient-to-br from-white to-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl font-bold text-gray-800">Chapters</h2>
          
          <select 
            id="chapterSelect" 
            class="px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-bible-blue focus:border-bible-blue bg-white hover:bg-gray-50 transition-colors duration-200 cursor-pointer"
          >
            <option value="">Chapter</option>
            {book.chaptersContent && book.chaptersContent.length > 0 ? (
              book.chaptersContent
                .sort((a, b) => a.number - b.number)
                .map((chapter) => (
                  <option value={chapter.number}>{chapter.number}</option>
                ))
            ) : (
              <option value="" disabled>-</option>
            )}
          </select>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {book.chaptersContent && book.chaptersContent.length > 0 ? (
            book.chaptersContent.map((chapter) => (
              <a 
                href={PATHS.chapter(book.id, chapter.number.toString())}
                class="block bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 overflow-hidden flex flex-col h-full"
              >
                <div class="p-6 flex flex-col h-full">
                  <div class="flex items-center justify-between mb-3">
                    <h3 class="text-lg font-bold text-gray-800">Chapter {chapter.number}</h3>
                    <span class="text-xs bg-bible-blue/10 text-bible-blue px-2 py-1 rounded">
                      {chapter.themes?.[0] || 'Scripture'}
                    </span>
                  </div>
                  
                  <h4 class="text-base font-semibold text-gray-700 mb-3">{chapter.title}</h4>
                  
                  <p class="text-gray-600 text-sm leading-relaxed mb-4">
                    {chapter.summary}
                  </p>
                  
                  <div class="mb-4">
                    <p class="text-xs text-gray-500 mb-2">
                      <span class="font-medium">Key Verses:</span> {chapter.keyVerses?.join(', ') || 'N/A'}
                    </p>
                  </div>
                  
                  <div class="flex flex-wrap gap-1">
                    {chapter.themes?.map((theme) => (
                      <span class="text-xs bg-bible-gold/10 text-bible-gold px-2 py-1 rounded">
                        {theme}
                      </span>
                    ))}
                  </div>
                  
                  <div class="mt-auto pt-4 border-t border-gray-100">
                    <span class="text-bible-blue text-sm font-medium">Read Chapter â†’</span>
                  </div>
                </div>
              </a>
            ))
          ) : (
            <div class="col-span-full text-center py-12">
              <div class="bg-white rounded-xl shadow-lg p-8">
                <h3 class="text-xl font-semibold text-gray-700 mb-4">Chapter Content Coming Soon</h3>
                <p class="text-gray-600">
                  We're working on adding detailed chapter content for {book.name}. 
                  Check back soon for in-depth study materials.
                </p>
              </div>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Book Summary Section -->
    <section class="py-16 bg-gradient-to-br from-bible-blue/5 to-indigo-50">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">About {book.name}</h2>
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
          <p class="text-gray-700 text-lg leading-relaxed mb-6">
            {book.description}
          </p>
          <div class="grid md:grid-cols-2 gap-6 text-left">
            <div>
              <h4 class="font-semibold text-gray-800 mb-2">Testament</h4>
              <p class="text-gray-600">{book.testament}</p>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 mb-2">Author</h4>
              <p class="text-gray-600">{book.author}</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script define:vars={{ bookId: book.id }}>
    // Chapter dropdown functionality
    document.addEventListener('DOMContentLoaded', function() {
      const chapterSelect = document.getElementById('chapterSelect');
      
      if (chapterSelect) {
        chapterSelect.addEventListener('change', function() {
          const selectedChapter = this.value;
          if (selectedChapter) {
            // Navigate to the selected chapter page
            const chapterUrl = `/book/${bookId}/chapter/${selectedChapter}`;
            window.location.href = chapterUrl;
          }
        });
      }
    });
  </script>
</Layout>
