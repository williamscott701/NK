---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.tsx';
import booksData from '../../data/bible-books.json';

export async function getStaticPaths() {
  return booksData.books.map((book) => ({
    params: { bookId: book.id },
    props: { book }
  }));
}

const { book } = Astro.props;
---

<Layout title={`${book.name} - Bible Book`}>
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-100 py-16">
      <div class="absolute top-10 left-10 w-48 h-48 bg-bible-blue/5 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-bible-gold/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-6xl mx-auto px-6">
        <!-- Breadcrumb -->
        <Breadcrumb 
          client:load 
          items={[
            { label: 'Home', href: '/' },
            { label: 'Books', href: '/books' },
            { label: book.name }
          ]} 
        />

        <!-- Book Header -->
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-bible-blue to-indigo-600 mb-4">
            {book.name}
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-6">
            {book.description}
          </p>
          
          <!-- Book Info -->
          <div class="flex flex-wrap justify-center gap-4 mb-8">
            <span class="bg-bible-blue/10 text-bible-blue px-4 py-2 rounded-full">
              {book.testament}
            </span>
            <span class="bg-bible-gold/10 text-bible-gold px-4 py-2 rounded-full">
              {book.chapters} Chapters
            </span>
            <span class="bg-gray-100 text-gray-700 px-4 py-2 rounded-full">
              Author: {book.author}
            </span>
          </div>

          <!-- Themes -->
          <div class="flex flex-wrap justify-center gap-2">
            {book.themes.map((theme) => (
              <span class="text-sm bg-bible-gold/20 text-bible-gold px-3 py-1 rounded-full">
                {theme}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Chapters Grid Section -->
    <section class="py-16 bg-gradient-to-br from-white to-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl font-bold text-gray-800">Chapters</h2>
          
          <select 
            id="chapterSelect" 
            class="px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-bible-blue focus:border-bible-blue bg-white hover:bg-gray-50 transition-colors duration-200 cursor-pointer"
          >
            <option value="">Chapter</option>
            {book.chaptersContent && book.chaptersContent.length > 0 ? (
              book.chaptersContent
                .sort((a, b) => a.number - b.number)
                .map((chapter) => (
                  <option value={chapter.number}>{chapter.number}</option>
                ))
            ) : (
              <option value="" disabled>-</option>
            )}
          </select>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {book.chaptersContent && book.chaptersContent.length > 0 ? (
            book.chaptersContent.map((chapter) => (
              <a 
                href={`/book/${book.id}/chapter/${chapter.number}`}
                class="block bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 overflow-hidden flex flex-col h-full"
              >
                <div class="p-6 flex flex-col h-full">
                  <div class="flex items-center justify-between mb-3">
                    <h3 class="text-lg font-bold text-gray-800">Chapter {chapter.number}</h3>
                    <span class="text-xs bg-bible-blue/10 text-bible-blue px-2 py-1 rounded">
                      {chapter.themes?.[0] || 'Scripture'}
                    </span>
                  </div>
                  
                  <h4 class="text-base font-semibold text-gray-700 mb-3">{chapter.title}</h4>
                  
                  <p class="text-gray-600 text-sm leading-relaxed mb-4">
                    {chapter.summary}
                  </p>
                  
                  <div class="mb-4">
                    <p class="text-xs text-gray-500 mb-2">
                      <span class="font-medium">Key Verses:</span> {chapter.keyVerses?.join(', ') || 'N/A'}
                    </p>
                  </div>
                  
                  <div class="flex flex-wrap gap-1">
                    {chapter.themes?.map((theme) => (
                      <span class="text-xs bg-bible-gold/10 text-bible-gold px-2 py-1 rounded">
                        {theme}
                      </span>
                    ))}
                  </div>
                  
                  <div class="mt-auto pt-4 border-t border-gray-100">
                    <span class="text-bible-blue text-sm font-medium">Read Chapter →</span>
                  </div>
                </div>
              </a>
            ))
          ) : (
            <div class="col-span-full text-center py-12">
              <div class="bg-white rounded-xl shadow-lg p-8">
                <h3 class="text-xl font-semibold text-gray-700 mb-4">Chapter Content Coming Soon</h3>
                <p class="text-gray-600">
                  We're working on adding detailed chapter content for {book.name}. 
                  Check back soon for in-depth study materials.
                </p>
              </div>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Book Summary Section -->
    <section class="py-16 bg-gradient-to-br from-bible-blue/5 to-indigo-50">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">About {book.name}</h2>
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
          <p class="text-gray-700 text-lg leading-relaxed mb-6">
            {book.description}
          </p>
          <div class="grid md:grid-cols-2 gap-6 text-left">
            <div>
              <h4 class="font-semibold text-gray-800 mb-2">Testament</h4>
              <p class="text-gray-600">{book.testament}</p>
            </div>
            <div>
              <h4 class="font-semibold text-gray-800 mb-2">Author</h4>
              <p class="text-gray-600">{book.author}</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-6 py-12">
      <div class="grid md:grid-cols-4 gap-8">
        <!-- Brand Section -->
        <div class="col-span-2">
          <div class="flex items-center mb-4">
            <h3 class="text-2xl font-bold">
              <span class="text-bible-blue">Bible</span>
              <span class="text-bible-gold">Bing</span>
            </h3>
          </div>
          <p class="text-gray-300 mb-6 max-w-md">
            Discover divine wisdom with powerful tools designed to make Bible study engaging, meaningful, and accessible to everyone.
          </p>
          <div class="flex space-x-4">
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
          <ul class="space-y-2">
            <li><a href="/books" class="text-gray-300 hover:text-white transition-colors">Books</a></li>
            <li><a href="/concepts" class="text-gray-300 hover:text-white transition-colors">Concepts</a></li>
            <li><a href="/stories" class="text-gray-300 hover:text-white transition-colors">Stories</a></li>
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">About</a></li>
          </ul>
        </div>

        <!-- Support -->
        <div>
          <h4 class="text-lg font-semibold mb-4">Support</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Help Center</a></li>
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Contact Us</a></li>
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Privacy Policy</a></li>
            <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Terms of Service</a></li>
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="border-t border-gray-800 mt-12 pt-8 text-center">
        <p class="text-gray-400">
          © 2025 BibleBing. All rights reserved. Made with ❤️ for spreading divine wisdom.
        </p>
      </div>
    </div>
  </footer>

  <script define:vars={{ bookId: book.id }}>
    // Chapter dropdown functionality
    document.addEventListener('DOMContentLoaded', function() {
      const chapterSelect = document.getElementById('chapterSelect');
      
      chapterSelect.addEventListener('change', function() {
        const selectedChapter = this.value;
        if (selectedChapter) {
          // Navigate to the selected chapter page
          window.location.href = `/book/${bookId}/chapter/${selectedChapter}`;
        }
      });
    });
  </script>
</Layout>
