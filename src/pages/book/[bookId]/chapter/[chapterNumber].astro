---
import Layout from '../../../../layouts/Layout.astro';
import Breadcrumb from '../../../../components/Breadcrumb.tsx';
import booksData from '../../../../data/bible-books.json';
import { PATHS } from '../../../../utils/paths';

export async function getStaticPaths() {
  const paths = [];
  
  booksData.books.forEach((book) => {
    if (book.chaptersContent && book.chaptersContent.length > 0) {
      book.chaptersContent.forEach((chapter) => {
        paths.push({
          params: { 
            bookId: book.id, 
            chapterNumber: chapter.number.toString() 
          },
          props: { book, chapter }
        });
      });
    }
  });
  
  return paths;
}

const { book, chapter } = Astro.props;
---

<Layout title={`${book.name} Chapter ${chapter.number} - Bible Chapter`}>
  <main class="min-h-screen">
    <!-- Header Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-100 py-8 md:py-16">
      <div class="absolute top-10 left-10 w-48 h-48 bg-bible-blue/5 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-bible-gold/5 rounded-full blur-2xl"></div>
      
      <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-6">
        <!-- Breadcrumb -->
        <Breadcrumb 
          client:load 
          items={[
            { label: 'Home', href: PATHS.home() },
            { label: 'Books', href: PATHS.books() },
            { label: book.name, href: PATHS.book(book.id) },
            { label: `Chapter ${chapter.number}` }
          ]} 
        />

        <!-- Chapter Header -->
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-bible-blue to-indigo-600 mb-4">
            {book.name} Chapter {chapter.number}
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-6">
            {chapter.title || `Chapter ${chapter.number} of ${book.name}`}
          </p>
          
          <!-- Chapter Info -->
          <div class="flex flex-wrap justify-center gap-4 mb-8">
            <span class="bg-bible-blue/10 text-bible-blue px-4 py-2 rounded-full">
              {book.testament}
            </span>
            <span class="bg-bible-gold/10 text-bible-gold px-4 py-2 rounded-full">
              {chapter.verses?.length || 'Unknown'} Verses
            </span>
            <span class="bg-gray-100 text-gray-700 px-4 py-2 rounded-full">
              {book.name}
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Chapter Content Section -->
    <section class="py-16 bg-gradient-to-br from-white to-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Navigation -->
        <div class="flex items-center justify-between mb-8">
          <div class="flex gap-4">
            {chapter.number > 1 && (
              <a 
                href={PATHS.chapter(book.id, (chapter.number - 1).toString())}
                class="inline-flex items-center px-4 py-2 bg-bible-blue text-white rounded-lg hover:bg-bible-blue/90 transition-colors"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Previous Chapter
              </a>
            )}
          </div>
          
          <div class="flex gap-4">
            {chapter.number < (book.chaptersContent?.length || 0) && (
              <a 
                href={PATHS.chapter(book.id, (chapter.number + 1).toString())}
                class="inline-flex items-center px-4 py-2 bg-bible-blue text-white rounded-lg hover:bg-bible-blue/90 transition-colors"
              >
                Next Chapter
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            )}
          </div>
        </div>

        <!-- Back to Book -->
        <div class="mb-8 text-center">
          <a 
            href={PATHS.book(book.id)}
            class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5M12 19l-7-7 7-7"></path>
            </svg>
            Back to {book.name}
          </a>
        </div>

        <!-- Summary -->
        <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-3 text-bible-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Chapter Summary
          </h3>
          <p class="text-gray-700 text-lg leading-relaxed">
            {chapter.summary}
          </p>
        </div>

        <!-- Key Verses -->
        <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-3 text-bible-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
            Key Verses
          </h3>
          <div class="flex flex-wrap gap-3">
            {chapter.keyVerses?.map((verse) => (
              <span class="bg-bible-blue/10 text-bible-blue px-4 py-2 rounded-full font-medium">
                {verse}
              </span>
            )) || <span class="text-gray-500">No key verses listed</span>}
          </div>
        </div>

        <!-- Chapter Content -->
        <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-3 text-bible-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            Scripture Content
          </h3>
          <div class="bg-gradient-to-r from-bible-blue/5 to-bible-gold/5 rounded-lg p-6 border-l-4 border-bible-blue">
            <p class="text-gray-800 text-lg leading-relaxed italic font-serif">
              {chapter.content}
            </p>
          </div>
        </div>

        <!-- Themes -->
        <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-3 text-bible-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
            Themes & Topics
          </h3>
          <div class="flex flex-wrap gap-3">
            {chapter.themes?.map((theme) => (
              <span class="bg-bible-gold/10 text-bible-gold px-4 py-2 rounded-full font-medium">
                {theme}
              </span>
            )) || <span class="text-gray-500">No themes listed</span>}
          </div>
        </div>
      </div>
    </section>

    <!-- Navigation Section -->
    <section class="py-16 bg-gradient-to-br from-bible-blue/5 to-indigo-50">
      <div class="max-w-4xl mx-auto px-6">
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-white/20">
          <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">Continue Reading</h3>
          
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Previous Chapter -->
            {chapter.number > 1 && (
              <a 
                href={`/book/${book.id}/chapter/${chapter.number - 1}`}
                class="block bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100"
              >
                <div class="flex items-center text-bible-blue mb-2">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                  </svg>
                  Previous Chapter
                </div>
                <h4 class="font-semibold text-gray-800">Chapter {chapter.number - 1}</h4>
              </a>
            )}
            
            <!-- Next Chapter -->
            {book.chaptersContent && chapter.number < book.chaptersContent.length && (
              <a 
                href={`/book/${book.id}/chapter/${chapter.number + 1}`}
                class="block bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100"
              >
                <div class="flex items-center justify-end text-bible-blue mb-2">
                  Next Chapter
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
                <h4 class="font-semibold text-gray-800 text-right">Chapter {chapter.number + 1}</h4>
              </a>
            )}
          </div>
          
          <!-- Back to Chapters -->
          <div class="text-center mt-6">
            <a 
              href={`/book/${book.id}`}
              class="inline-flex items-center bg-bible-blue text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-all duration-300 font-medium"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
              </svg>
              View All Chapters
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-6 py-12">
      <div class="grid md:grid-cols-4 gap-8">
        <!-- Brand Section -->
        <div class="col-span-2">
          <div class="flex items-center mb-4">
            <h3 class="text-2xl font-bold">
              <span class="text-bible-blue">Bible</span>
              <span class="text-bible-gold">Bing</span>
            </h3>
          </div>
          <p class="text-gray-300 mb-6 max-w-md">
            Discover divine wisdom with powerful tools designed to make Bible study engaging, meaningful, and accessible to everyone.
          </p>
          <div class="flex space-x-4">
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
          <ul class="space-y-2">
            <li><a href={PATHS.books()} class="text-gray-300 hover:text-white transition-colors">Books</a></li>
            <li><a href={PATHS.concepts()} class="text-gray-300 hover:text-white transition-colors">Concepts</a></li>
            <li><a href={PATHS.stories()} class="text-gray-300 hover:text-white transition-colors">Stories</a></li>
            <li><a href={PATHS.about()} class="text-gray-300 hover:text-white transition-colors">About</a></li>
          </ul>
        </div>

        <!-- Support -->
        <div>
          <h4 class="text-lg font-semibold mb-4">Support</h4>
          <ul class="space-y-2">
            <li><a href={PATHS.help()} class="text-gray-300 hover:text-white transition-colors">Help Center</a></li>
            <li><a href={PATHS.contact()} class="text-gray-300 hover:text-white transition-colors">Contact Us</a></li>
            <li><a href={PATHS.privacy()} class="text-gray-300 hover:text-white transition-colors">Privacy Policy</a></li>
            <li><a href={PATHS.terms()} class="text-gray-300 hover:text-white transition-colors">Terms of Service</a></li>
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="border-t border-gray-800 mt-12 pt-8 text-center">
        <p class="text-gray-400">
          © 2025 BibleBing. All rights reserved. Made with ❤️ for spreading divine wisdom.
        </p>
      </div>
    </div>
  </footer>
</Layout>
