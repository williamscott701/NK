{
  "name": "bible-web-app",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run kill-port && astro dev",
    "start": "npm run kill-port && astro dev",
    "kill-port": "lsof -ti:8080 | xargs kill -9 2>/dev/null || true",
    "dev-clean": "npm run kill-port && astro dev",
    "start-robust": "./start-dev.sh",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "validate-csp": "node scripts/security/validate-csp.js",
    "security-check": "npm run validate-csp",
    "test-404": "echo 'Navigate to a non-existent URL (e.g., /nonexistent-page) to test the 404 page'",
    "check-concepts": "node scripts/check-pending-concepts.js",
    "concepts-report": "node scripts/check-pending-concepts.js CONCEPTS_PROGRESS_REPORT.md"
  },
  "dependencies": {
    "@astrojs/check": "^0.8.1",
    "@astrojs/mdx": "^3.1.3",
    "@astrojs/react": "^3.6.0",
    "@astrojs/tailwind": "^5.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "astro": "^4.12.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4"
  }
}
